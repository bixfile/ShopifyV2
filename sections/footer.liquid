{% comment %}
  Footer Section - Site footer with links and social media
{% endcomment %}

<footer class="footer" role="contentinfo">
  <div class="footer__wrapper">
    {% if section.blocks.size > 0 %}
      <div class="footer__content">
        {% for block in section.blocks %}
          <div class="footer__block" {{ block.shopify_attributes }}>
            {% case block.type %}
              {% when 'link_list' %}
                {% if block.settings.menu != blank %}
                  <h4 class="footer__heading">{{ block.settings.heading }}</h4>
                  <ul class="footer__list">
                    {% for link in block.settings.menu.links %}
                      <li class="footer__list-item">
                        <a href="{{ link.url }}" class="footer__link">
                          {{ link.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}

              {% when 'text' %}
                <h4 class="footer__heading">{{ block.settings.heading }}</h4>
                <div class="footer__text">
                  {{ block.settings.text }}
                </div>

              {% when 'newsletter' %}
                <h4 class="footer__heading">{{ block.settings.heading }}</h4>
                <div class="footer__newsletter">
                  {% form 'customer', class: 'footer__newsletter-form' %}
                    {% if form.posted_successfully? %}
                      <p class="footer__newsletter-success">{{ 'newsletter.success' | t }}</p>
                    {% endif %}
                    
                    <input 
                      type="email" 
                      name="contact[email]" 
                      placeholder="{{ 'newsletter.email_placeholder' | t }}"
                      class="footer__newsletter-input"
                      required
                    >
                    <button type="submit" class="footer__newsletter-button">
                      {{ 'newsletter.submit' | t }}
                    </button>
                  {% endform %}
                </div>

            {% endcase %}
          </div>
        {% endfor %}
      </div>
    {% endif %}

    <div class="footer__bottom">
      <div class="footer__social">
        {% if settings.social_facebook_link != blank %}
          <a href="{{ settings.social_facebook_link }}" class="footer__social-link" target="_blank" rel="noopener">
            {% render 'icon-facebook' %}
          </a>
        {% endif %}
        {% if settings.social_instagram_link != blank %}
          <a href="{{ settings.social_instagram_link }}" class="footer__social-link" target="_blank" rel="noopener">
            {% render 'icon-instagram' %}
          </a>
        {% endif %}
        {% if settings.social_twitter_link != blank %}
          <a href="{{ settings.social_twitter_link }}" class="footer__social-link" target="_blank" rel="noopener">
            {% render 'icon-twitter' %}
          </a>
        {% endif %}
        {% if settings.social_tiktok_link != blank %}
          <a href="{{ settings.social_tiktok_link }}" class="footer__social-link" target="_blank" rel="noopener">
            {% render 'icon-tiktok' %}
          </a>
        {% endif %}
      </div>

      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'footer.powered_by_shopify' | t }}
      </p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "About"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add your own custom text here.</p>"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter signup",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Join our newsletter"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      },
      {
        "type": "text"
      },
      {
        "type": "newsletter"
      }
    ]
  }
}
{% endschema %}

